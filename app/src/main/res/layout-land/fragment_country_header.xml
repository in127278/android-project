<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primaryLightColor">

    <TextView
        android:id="@+id/name"
        android:layout_width="@dimen/land_width_column1"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:layout_marginLeft="16dp"
        android:text="@string/country"
        android:textAppearance="?attr/textAppearanceListItem"
        />

    <TextView
        android:id="@+id/total_confirmed"
        android:layout_width="@dimen/land_width_column2"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:text="@string/total_cases"
        android:textAlignment="center"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/new_confirmed"
        android:layout_width="@dimen/land_width_column3"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:text="@string/new_cases"
        android:textAlignment="center"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/total_deaths"
        android:layout_width="@dimen/land_width_column4"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:text="@string/total_deaths"
        android:textAlignment="center"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/new_deaths"
        android:layout_width="@dimen/land_width_column5"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:text="@string/new_deaths"
        android:textAlignment="center"
        android:textAppearance="?attr/textAppearanceListItem" />
</LinearLayout>
